<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="normallyStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="boldStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="colorStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>

    <style name="tvStyleIv">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/margin_90dp</item>
    </style>

    <style name="boldStyleTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_question</item>
    </style>

    <style name="styleRadioButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="styleButtonNext">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/design_button_next</item>
    </style>

    <style name="styleNameTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_title</item>
    </style>

    <style name="styleTextUpload">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_upload</item>
    </style>

    <style name="tvStyleChildList">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_upload</item>
    </style>

    <style name="textGroupList">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_upload</item>
    </style>

    <style name="cvStyleLeft">
        <item name="android:layout_width">@dimen/width_card</item>
        <item name="android:layout_height">@dimen/height_card</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_column">0</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_marginStart">@dimen/left_start_card</item>
        <item name="android:layout_marginEnd">@dimen/left_end_card</item>
        <item name="android:layout_marginBottom">@dimen/left_bottom_card</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardCornerRadius">@dimen/radius_card</item>
        <item name="cardElevation">@dimen/size_0dp</item>
    </style>

    <style name="cvStyleRight">
        <item name="android:layout_width">@dimen/width_card</item>
        <item name="android:layout_height">@dimen/height_card</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_column">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_marginStart">@dimen/right_start_card</item>
        <item name="android:layout_marginEnd">@dimen/right_end_card</item>
        <item name="android:layout_marginBottom">@dimen/right_bottom_card</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardCornerRadius">@dimen/radius_card</item>
        <item name="cardElevation">@dimen/size_0dp</item>
    </style>

    <style name="llCard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="tvTitleFragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="styleDivider">
        <item name="android:background">@drawable/design_shape_list</item>
        <item name="android:childDivider">@color/white</item>
        <item name="android:divider">@color/background_color</item>
        <item name="android:dividerHeight">@dimen/size_3dp</item>
    </style>

    <style name="ivClinicSize">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">@dimen/margin_40dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_40dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_50dp</item>
        <item name="android:layout_marginTop">@dimen/margin_20dp</item>
    </style>
</resources>