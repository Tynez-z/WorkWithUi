<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clGroupList"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTitleGroupList"
        style="@style/textGroupList"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:background="@drawable/design_shape_group"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/padding_35dp"
        android:paddingEnd="@dimen/padding_5dp"
        android:text="@string/example_for_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/clGroupList" />

    <ImageView
        android:id="@+id/ivAddGroupList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_marginEnd="@dimen/margin_20dp"
        android:contentDescription="@string/icon_add"
        android:src="@drawable/ic_add"
        app:layout_constraintEnd_toEndOf="@id/tvTitleGroupList"
        app:layout_constraintTop_toTopOf="@id/clGroupList" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_6dp"
        android:background="@drawable/design_shape_space_group"
        app:layout_constraintTop_toTopOf="@id/clGroupList" />
</androidx.constraintlayout.widget.ConstraintLayout>