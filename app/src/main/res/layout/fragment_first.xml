<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">

        <View
            android:id="@+id/fake_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_55dp"
            app:layout_constraintTop_toTopOf="@id/constraint" />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="@dimen/size_22dp"
            android:layout_height="@dimen/size_22dp"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_marginEnd="@dimen/margin_12dp"
            android:clickable="true"
            android:contentDescription="@string/icon_settings"
            android:focusable="true"
            android:src="@drawable/ic_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="@dimen/width_img_profile"
            android:layout_height="@dimen/height_img_profile"
            android:layout_marginStart="@dimen/margin_35dp"
            android:background="@drawable/design_img_profile"
            android:contentDescription="@string/icon_profile"
            android:padding="@dimen/padding_20dp"
            android:src="@drawable/ic_userimage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fake_toolbar" />

        <TextView
            android:id="@+id/name"
            style="@style/boldStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fake_toolbar"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_toEndOf="@+id/imageViewProfile"
            android:text="@string/name_user_profile"
            app:layout_constraintStart_toEndOf="@id/imageViewProfile"
            app:layout_constraintTop_toBottomOf="@+id/fake_toolbar" />

        <TextView
            android:id="@+id/number"
            style="@style/normallyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_toEndOf="@+id/imageViewProfile"
            android:text="@string/number_mobile"
            app:layout_constraintStart_toEndOf="@+id/imageViewProfile"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <TextView
            android:id="@+id/membership_id"
            style="@style/normallyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/number"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_toEndOf="@+id/imageViewProfile"
            android:text="@string/membership_id"
            app:layout_constraintStart_toEndOf="@+id/imageViewProfile"
            app:layout_constraintTop_toBottomOf="@+id/number" />

        <ImageView
            android:id="@+id/img_camera"
            android:layout_width="@dimen/width_img_camera"
            android:layout_height="@dimen/height_img_camera"
            android:layout_marginStart="@dimen/margin_88dp"
            android:layout_marginTop="@dimen/margin_48dp"
            android:background="@drawable/design_img_camera"
            android:contentDescription="@string/icon_camera"
            android:padding="@dimen/padding_2dp"
            android:src="@drawable/ic_camera"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fake_toolbar" />

        <TextView
            android:id="@+id/personal_details"
            style="@style/colorStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:text="@string/personal_details"
            app:layout_constraintStart_toEndOf="@+id/imageViewProfile"
            app:layout_constraintTop_toBottomOf="@+id/membership_id" />

        <View
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_2dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:background="@drawable/shape_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/personal_details" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:padding="@dimen/padding_14dp"
            android:rowCount="4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line">

            <androidx.cardview.widget.CardView
                style="@style/styleCardViewLeft"
                android:layout_rowWeight="1"
                android:layout_row="0"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="@dimen/margin_linear"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/health_records"
                        android:layout_width="@dimen/width_img"
                        android:layout_height="@dimen/height_img"
                        android:contentDescription="@string/icon_health_records"
                        android:src="@drawable/ic_medical_report" />

                    <TextView
                        style="@style/textImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:text="@string/my_health_records" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/styleCardViewRight"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="@dimen/margin_linear"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/calendar"
                        android:layout_width="@dimen/width_img"
                        android:layout_height="@dimen/height_img"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/icon_calendar"
                        android:src="@drawable/ic_calendar" />

                    <TextView
                        style="@style/textImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:text="@string/my_appointments" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/styleCardViewRight"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="@dimen/margin_linear"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/medical_team"
                        android:layout_width="@dimen/width_img"
                        android:layout_height="@dimen/height_img"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/icon_medical_team"
                        android:src="@drawable/ic_volunteering" />

                    <TextView
                        style="@style/textImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:text="@string/my_medical_team" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/styleCardViewRight"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="@dimen/margin_linear"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/message"
                        android:layout_width="@dimen/width_img"
                        android:layout_height="@dimen/height_img"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/icon_message"
                        android:src="@drawable/ic_chat" />

                    <TextView
                        style="@style/textImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:text="@string/messages" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/styleCardViewLeft"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="@dimen/margin_linear"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/medications"
                        android:layout_width="@dimen/width_img"
                        android:layout_height="@dimen/height_img"
                        android:contentDescription="@string/icon_medications"
                        android:src="@drawable/ic_pill" />

                    <TextView
                        style="@style/textImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:text="@string/my_medications" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/styleCardViewLeft"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="@dimen/margin_linear"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/test_result"
                        android:layout_width="@dimen/width_img"
                        android:layout_height="@dimen/height_img"
                        android:contentDescription="@string/icon_test_result"
                        android:src="@drawable/ic_test" />

                    <TextView
                        style="@style/textImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:text="@string/test_results" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/styleCardViewLeft"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="@dimen/margin_linear"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/documents"
                        android:layout_width="@dimen/width_img"
                        android:layout_height="@dimen/height_img"
                        android:src="@drawable/ic_folder" />

                    <TextView
                        style="@style/textImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:text="@string/documents_folder" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/styleCardViewRight"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="@dimen/margin_linear"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/billing"
                        android:layout_width="@dimen/width_img"
                        android:layout_height="@dimen/height_img"
                        android:layout_gravity="center_horizontal"
                        android:contentDescription="@string/icon_billing"
                        android:src="@drawable/ic_bill" />

                    <TextView
                        style="@style/textImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_10dp"
                        android:text="@string/billing" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>