<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">

        <View
            android:id="@+id/fake_toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp" />

        <ImageView
            android:id="@+id/imageViewProfile"
            android:layout_width="@dimen/width_img_profile"
            android:layout_height="@dimen/height_img_profile"
            android:layout_below="@+id/fake_toolbar"
            android:layout_marginStart="30dp"
            android:background="@drawable/design_img_profile"
            android:padding="20dp"
            android:src="@drawable/ic_userimage" />

        <ImageView
            android:id="@+id/img_camera"
            android:layout_width="@dimen/width_img_camera"
            android:layout_height="@dimen/height_img_camera"
            android:layout_alignEnd="@+id/imageViewProfile"
            android:layout_alignBottom="@+id/imageViewProfile"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/design_img_camera"
            android:padding="2dp"
            android:src="@drawable/ic_camera" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fake_toolbar"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/imageViewProfile"
            android:text="@string/name_user_profile"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/number"
            style="@style/normallyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/imageViewProfile"
            android:text="@string/number_mobile" />

        <TextView
            android:id="@+id/membership_id"
            style="@style/normallyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/number"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/imageViewProfile"
            android:text="@string/membership_id" />

        <!-- TODO make style for this text -->
        <TextView
            android:id="@+id/personal_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/membership_id"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/imageViewProfile"
            android:text="@string/personal_details"
            android:textColor="@color/teal_700"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_settings" />

        <View
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@id/personal_details"
            android:layout_marginTop="4dp"
            android:background="@color/line" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/line"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:columnOrderPreserved="false"
            android:padding="14dp"
            android:rowCount="4">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginStart="@dimen/left_start_card"
                android:layout_marginEnd="@dimen/left_end_card"
                android:layout_marginBottom="@dimen/left_bottom_card"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/radius_card"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="@dimen/margin_linear"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/health_records"
                        android:layout_width="@dimen/width_img"
                        android:layout_height="@dimen/height_img"
                        android:src="@drawable/ic_medical_report" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/my_health_records"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginStart="@dimen/right_start_card"
                android:layout_marginEnd="@dimen/right_end_card"
                android:layout_marginBottom="@dimen/right_bottom_card"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/radius_card"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="@dimen/margin_linear"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/calendar"
                        android:layout_width="@dimen/width_img"
                        android:layout_height="@dimen/height_img"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_calendar" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/my_appointments"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginStart="@dimen/right_start_card"
                android:layout_marginEnd="@dimen/right_end_card"
                android:layout_marginBottom="@dimen/right_bottom_card"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/radius_card"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="@dimen/margin_linear"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/medical_team"
                        android:layout_width="@dimen/width_img"
                        android:layout_height="@dimen/height_img"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_volunteering" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/my_medical_team"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginStart="@dimen/right_start_card"
                android:layout_marginEnd="@dimen/right_end_card"
                android:layout_marginBottom="@dimen/right_bottom_card"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/radius_card"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="@dimen/margin_linear"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/message"
                        android:layout_width="@dimen/width_img"
                        android:layout_height="@dimen/height_img"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_chat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/messages"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginStart="@dimen/left_start_card"
                android:layout_marginEnd="@dimen/left_end_card"
                android:layout_marginBottom="@dimen/left_bottom_card"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/radius_card"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="@dimen/margin_linear"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/medications"
                        android:layout_width="@dimen/width_img"
                        android:layout_height="@dimen/height_img"
                        android:src="@drawable/ic_pill" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/my_medications"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginStart="@dimen/left_start_card"
                android:layout_marginEnd="@dimen/left_end_card"
                android:layout_marginBottom="@dimen/left_bottom_card"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/radius_card"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="@dimen/margin_linear"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/test_result"
                        android:layout_width="@dimen/width_img"
                        android:layout_height="@dimen/height_img"
                        android:src="@drawable/ic_test" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/test_results"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginStart="@dimen/left_start_card"
                android:layout_marginEnd="@dimen/left_end_card"
                android:layout_marginBottom="@dimen/left_bottom_card"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/radius_card"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="@dimen/margin_linear"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/documents"
                        android:layout_width="@dimen/width_img"
                        android:layout_height="@dimen/height_img"
                        android:src="@drawable/ic_folder" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/documents_folder"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginStart="@dimen/right_start_card"
                android:layout_marginEnd="@dimen/right_end_card"
                android:layout_marginBottom="@dimen/right_bottom_card"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/radius_card"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="@dimen/margin_linear"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/billing"
                        android:layout_width="@dimen/width_img"
                        android:layout_height="@dimen/height_img"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_bill" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="@string/billing"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/text_size" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>
    </RelativeLayout>
</layout>