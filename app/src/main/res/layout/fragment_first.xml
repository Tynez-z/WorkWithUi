<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <ScrollView
            android:id="@+id/svFirstFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clFirstFragment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_0dp"
                android:background="@color/background_color">

                <include
                    android:id="@+id/toolbarProfile"
                    layout="@layout/toolbar_profile"
                    app:layout_constraintTop_toTopOf="parent" />

                <include
                    android:id="@+id/cardProfile"
                    layout="@layout/profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/toolbarProfile" />

                <GridLayout
                    android:id="@+id/glFirstFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_5dp"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:columnOrderPreserved="false"
                    android:padding="@dimen/padding_14dp"
                    android:rowCount="4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardProfile">

                    <androidx.cardview.widget.CardView
                        style="@style/cvStyleLeft"
                        android:layout_row="0">

                            <ImageView
                                android:id="@+id/ivHealthRecords"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin_35dp"
                                android:contentDescription="@string/icon_health_records"
                                android:src="@drawable/ic_medical_report" />

                        <TextView
                            style="@style/tvStyleIv"
                            android:layout_marginTop="@dimen/margin_100dp"
                            android:layout_marginStart="@dimen/margin_35dp"
                            android:text="@string/my_health_records" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/cvStyleRight"
                    android:layout_row="0">

                    <LinearLayout style="@style/llCard">

                        <ImageView
                            android:id="@+id/ivCalendar"
                            android:layout_width="@dimen/width_img"
                            android:layout_height="@dimen/height_img"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/icon_calendar"
                            android:src="@drawable/ic_calendar" />

                        <TextView
                            style="@style/tvStyleIv"
                            android:text="@string/my_appointments" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/cvStyleRight"
                    android:layout_row="1">

                    <LinearLayout style="@style/llCard">

                        <ImageView
                            android:id="@+id/ivMedicalTeam"
                            android:layout_width="@dimen/width_img"
                            android:layout_height="@dimen/height_img"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/icon_medical_team"
                            android:src="@drawable/ic_volunteering" />

                        <TextView
                            style="@style/tvStyleIv"
                            android:text="@string/my_medical_team" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/cvStyleRight"
                    android:layout_row="2">

                    <LinearLayout style="@style/llCard">

                        <ImageView
                            android:id="@+id/ivMessage"
                            android:layout_width="@dimen/width_img"
                            android:layout_height="@dimen/height_img"
                            android:layout_gravity="center_horizontal"
                            android:contentDescription="@string/icon_message"
                            android:src="@drawable/ic_chat" />

                        <TextView
                            style="@style/tvStyleIv"
                            android:text="@string/messages" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/cvStyleLeft"
                    android:layout_row="1">

                    <LinearLayout style="@style/llCard">

                        <ImageView
                            android:id="@+id/ivMedications"
                            android:layout_width="@dimen/width_img"
                            android:layout_height="@dimen/height_img"
                            android:contentDescription="@string/icon_medications"
                            android:src="@drawable/ic_pill" />

                        <TextView
                            style="@style/tvStyleIv"
                            android:text="@string/my_medications" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/cvStyleLeft"
                    android:layout_row="2">

                    <LinearLayout style="@style/llCard">

                        <ImageView
                            android:id="@+id/ivTestResult"
                            android:layout_width="@dimen/width_img"
                            android:layout_height="@dimen/height_img"
                            android:contentDescription="@string/icon_test_result"
                            android:src="@drawable/ic_test" />

                        <TextView
                            style="@style/tvStyleIv"
                            android:text="@string/test_results" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/cvStyleLeft"
                    android:layout_row="3">

                    <LinearLayout style="@style/llCard">

                        <ImageView
                            android:id="@+id/ivDocuments"
                            android:layout_width="@dimen/width_img"
                            android:layout_height="@dimen/height_img"
                            android:src="@drawable/ic_folder" />

                        <TextView
                            style="@style/tvStyleIv"
                            android:text="@string/documents_folder" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/cvStyleRight"
                    android:layout_row="3">

                    <LinearLayout style="@style/llCard">

                        <ImageView
                            android:id="@+id/ivBilling"
                            android:layout_width="@dimen/width_img"
                            android:layout_height="@dimen/height_img"
                            android:contentDescription="@string/icon_billing"
                            android:src="@drawable/ic_bill" />

                        <TextView
                            style="@style/tvStyleIv"
                            android:text="@string/billing" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                </GridLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
</layout>