<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable name="baseFragment"
            type="com.example.ui.presentations.base.BaseFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clProfileToolBar">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_55dp"
            app:layout_constraintTop_toTopOf="@id/clProfileToolBar" />

        <ImageView
            android:id="@+id/ivSettingsToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_marginEnd="@dimen/margin_12dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> baseFragment.onClickSettings()}"
            android:contentDescription="@string/icon_settings"
            android:src="@drawable/ic_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>