<?xml version="1.0" encoding="utf-8"?>
<!-- TODO rename constraint!  constraint from what? -->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tvTitleGroup"
        style="@style/textGroupList"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:background="@drawable/design_shape_group"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/padding_35dp"
        android:paddingEnd="@dimen/padding_5dp"
        android:text="@string/example_for_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/constraint" />

    <!-- TODO use universal size -->
    <ImageView
        android:id="@+id/ivAdd"
        android:layout_width="@dimen/size_18dp"
        android:layout_height="@dimen/size_18dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:src="@drawable/ic_add"
        android:layout_marginEnd="@dimen/margin_20dp"
        app:layout_constraintEnd_toEndOf="@id/tvTitleGroup"
        app:layout_constraintTop_toTopOf="@id/constraint"
        android:contentDescription="@string/icon_add" />

    <View
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="@id/constraint"
        android:layout_height="@dimen/size_6dp"
        android:background="@drawable/design_shape_space_group" />
</androidx.constraintlayout.widget.ConstraintLayout>