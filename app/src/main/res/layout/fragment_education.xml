<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="educationFragment"
            type="com.example.ui.presentations.fragments.EducationFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent" >

        <include
            android:id="@+id/toolbarEducationFragment"
            layout="@layout/fragment_base"
            app:baseFragment="@{educationFragment}" />

        <!-- TODO rename (why is style?) -->
        <TextView
            style="@style/tvStyleMenuFragment"
            android:text="@string/education_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarEducationFragment" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>